using System;

namespace BaekJoon
{
    class BaekJoon
    {
        static void Main(string[] args)
        {

            int cnt = int.Parse(Console.ReadLine());

            for (int i = 0; i < cnt; i++)
            {
                int[] input = Array.ConvertAll(Console.ReadLine().Split(), int.Parse);
                Console.WriteLine(input[0] + input[1]);

            }
        }
    }
}
